generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Name {
  id    String     @id @default(uuid())
  email String  @unique
  name  String?
}

model User {
  id         String  @id @default(uuid())
  username   String  @unique
  name       String  @unique
  department String 
  status     Boolean @default(false)
}

model UserImage {
  id       String  @id @default(uuid())
  username String
  imgURL   String?
}

model ImgFile {
  id           Int     @id @default(autoincrement())
  originalName String
  authorId     Int
  author       TypeImg @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([authorId])
}

model TypeImg {
  id     Int       @id @default(autoincrement())
  type   String?
  imgsrc ImgFile[]
}
